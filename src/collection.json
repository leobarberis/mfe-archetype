{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "new-mfe": {
      "description": "MFE Generation",
      "factory": "./mfe-archetype/index#newMfe",
      "schema": "./mfe-archetype/schema.json"
    },
    "new-container": {
      "description": "Container Generation",
      "factory": "./mfe-archetype/index#newContainer"
    },
    "add-mfe": {
      "description": "Add MFE to Container",
      "factory": "./mfe-archetype/index#addMFE",
      "schema": "./mfe-archetype/schema-add-mfe.json"
    },    
    "delete-mfe": {
      "description": "Delete MFE from Container",
      "factory": "./mfe-archetype/index#deleteMFE",
      "schema": "./mfe-archetype/schema-delete-mfe.json"
    },
    "mfe": {
      "description": "Generate both container with mfe and integrate them",
      "factory": "./mfe-archetype/index#newContainerMfe",
      "schema": "./mfe-archetype/schema.json"
    }
  }
}
